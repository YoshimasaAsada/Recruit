              <button class="btn btn-outline-secondary collapsed" type="button" data-toggle="collapse" data-target="#collapse_about_myself<%= about_myself.id %>" aria-expanded="false" aria-controls="collapse_about_myself<%= about_myself.id %>">
                <%= about_myself.title %>
              </button>
            </h5>
          </div>
          <div id="collapse_about_myself<%= about_myself.id %>" class="collapse" aria-labelledby="heading_about_myself<%= about_myself.id %>" data-parent="#accordionExample">
            <div class="card-body">
              <div class="form-group">
              <%= form_with model:about_myself, url: about_myself_path(about_myself), local:true do |f| %>
              <%= f.label :title, "タイトル"%>
              <%= f.text_field :title, class:"form-control" %>
              <%= f.label :introduction_400, "400字"%>
              <%= f.text_field :introduction_400, class:"form-control" %>
              <%= f.label :introduction_500, "500字"%>
              <%= f.text_field :introduction_500, class:"form-control" %>
              <%= f.label :introduction_600, "600字"%>
              <%= f.text_field :introduction_600, class:"form-control" %>
              <%= f.label :introduction_700, "700字"%>
              <%= f.text_field :introduction_700, class:"form-control" %>
              <%= f.label :introduction_800, "800字"%>
              <%= f.text_field :introduction_800, class:"form-control" %>
              <%= f.label :introduction_900, "900字"%>
              <%= f.text_field :introduction_900, class:"form-control" %>
              <%= f.label :introduction_1000, "1000字"%>
              <%= f.text_field :introduction_1000, class:"form-control" %>
              <%= f.submit "登録", class:"btn btn-success" %>
              <% end %>
              </div>
