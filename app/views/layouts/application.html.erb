<!DOCTYPE html>
<html>
  <head>
    <title>Recruit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">就活Note</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item active"><%= link_to "マイページ", my_page_path, class: "nav-link" %></li>
            <li class="nav-item active"><%= link_to "企業分析", root_path, class: "nav-link" %></li>
            <li class="nav-item active"><%= link_to "面接", interviews_path, class: "nav-link" %></li>
            <li class="nav-item active"><%= link_to "エントリーシート", resumes_path, class: "nav-link" %></li>
            <li class="nav-item active"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
            <% else %>
            <li class="nav-item active"><%= link_to "トップ", root_path, class: "nav-link" %></li>
            <li class="nav-item active"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
            <li class="nav-item active"><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
            <% end %>
          </ul>
        </div>
      </nav>

    <%= yield %>
  </body>
</html>
